    "@types/sinon-chai": "3.2.5",
    "babel-loader": "8.1.0",
    "chai": "4.3.1",
    "chai-subset": "1.6.0",
    "ethereum-waffle": "3.3.0",
    "event-target-shim": "5.0.1",
    "hardhat-gas-reporter": "1.0.4",
    "mocha": "8.3.0",
    "nyc": "15.1.0",
